<%- include('includes/head.ejs') %>
<header>
    <h1 class="title">Bienvenido</h1>
</header>
<main>
    <% if(mensaje != '') { %>
        <div class="notification is-warning">
            <button class="delete"></button>
            <%= mensaje %>
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                (document.querySelectorAll('.notification .delete') || []).forEach(($delete) => {
                    const $notification = $delete.parentNode;
    
                    $delete.addEventListener('click', () => {
                    $notification.parentNode.removeChild($notification);
                    });
                });
            });
        </script>
    <% } %>
    <br><br>
    <form action="/user/login" method="POST">
        <div class="field">
            <label class="label" for="username">Nombre de usuario</label>
            <div class="control">
                <input id="username" name="username" class="input" type="text" placeholder="lalo" required>
            </div>
        </div>
        <div class="field">
            <label class="label" for="password">Contrase√±a</label>
            <div class="control">
                <input id="password" name="password" class="input" type="password" required>
            </div>
        </div>
        <div class="control">
            <input type="submit" class="button is-link" value="Entrar">
        </div>
        
    </form>
